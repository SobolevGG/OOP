<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfApp" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Вкладка 1">
                <Grid>
                    <TextBox Name="textBoxContent" Text="Текст в TextBox"/>
                </Grid>
            </TabItem>
            <TabItem Header="Вкладка 2">
                <Grid>
                    <ListBox Name="listBoxItems">
                        <ListBoxItem>Элемент 1</ListBoxItem>
                        <ListBoxItem>Элемент 2</ListBoxItem>
                        <ListBoxItem>Элемент 3</ListBoxItem>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="OpenFile_Click"/>
                <MenuItem Header="Сохранить" Click="SaveFile_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
